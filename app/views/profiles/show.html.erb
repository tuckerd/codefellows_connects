<div class="row-fluid">
  <div class="span2">
    <%= gravatar_image_tag @profile.email, alt: @profile.name %>
  </div>
  <div class="span6">
    <h2>
      <%= @profile.name %>
      <% if @profile.for_hire %>
        <span class="label label-success">For Hire!</span>
      <% end %>
    </h2>
    <table class="profile_contact_info">
      <%# if (current_user.is_student? && (current_user.student.id == @profile.id)) ||
            (current_user.connected? (@profile)) %>
      <tr>
        <th scope="row" style="text-align: left">Phone Number</th>
        <td><%= @profile.phone_number %></td>
      </tr>
      <tr>
        <th scope="row" style="text-align: left">Email</th>
        <td><%= mail_to @profile.email %></td>
      </tr>
      <%# end -%>
      <tr>
        <th scope="row" style="text-align: left">LinkedIn</th>
        <td><%= @profile.linkedin_site %></td>
      </tr>
      <tr>
        <th scope="row" style="text-align: left">LinkedIn</th>
        <td><%= @profile.github_site %></td>
      </tr>
      <tr>
        <th scope="row" style="text-align: left">LinkedIn</th>
        <td><%= @profile.website %></td>
      </tr>
    </table>
  </div>
</div>

<div class="row-fluid">
  <div class="span8">
    <h3>Skills</h3>
    <p>
      <%= @profile.summary %>
    </p>
    <% if @profile.courses.size != 0 %>
      <h3>Courses</h3>
      <ul>
        <% @profile.user.courses.each do |course| %>
          <li><%= link_to course.title, course_path(course) %></li>
        <% end %>
      </ul>
    <% end %>
    <h3>Bio</h3>
    <p>
      <%= @profile.bio %>
    </p>
  </div>
</div>

<div class="row-fluid">
  <button class="btn btn-primary">Download Resume</button>
  <%# if current_user.is_admin? || (current_user.is_student? && current_user.student_id == @profile.id) %>
    <%= link_to "Edit Profile", edit_student_path(@profile), class: "btn btn-primary" %>
  <%# end -%>
</div>

<p id="notice"><%= notice %></p>

<p>
  <b>Email:</b>
  <%= @profile.email %>
</p>

<p>
  <b>First name:</b>
  <%= @profile.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @profile.last_name %>
</p>

<p>
  <b>Phone number:</b>
  <%= @profile.phone_number %>
</p>

<p>
  <b>Summary:</b>
  <%= @profile.summary %>
</p>

<p>
  <b>Linkedin site:</b>
  <%= @profile.linkedin_site %>
</p>

<p>
  <b>Github site:</b>
  <%= @profile.github_site %>
</p>

<p>
  <b>Website:</b>
  <%= @profile.website %>
</p>


<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
