<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>
  <%= f.input :email, hint: "This will only change the displayed contact email, not your account email" %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :phone_number %>
  <%= f.input :summary %>
  <%= f.input :linkedin_site %>
  <%= f.input :github_site %>
  <%= f.input :website %>
  <%= f.submit %>
<% end %>
