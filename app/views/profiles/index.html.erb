<div class="row-fluid">
  <h1>Profiles</h1>
</div>

<div class="row-fluid">
  <% if @profiles.empty? %>
  Sorry, there aren't any profiles here yet...
  <% else %>
  <table id="profiles" class="table index">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th class="input-prepend">
          <span class="add-on"><i class="icon-filter"></i></span>
          <input id="profile-filter" type="text" class="search input-medium" placeholder="Filter profiles" />
        </th>
      </tr>
    </thead>
    <tbody class="list">
      <% @profiles.each do |person| %>
      <tr>
        <td class="first_name"><%= link_to person.first_name, person %></td>
        <td class="last_name"><%= link_to person.last_name, person %></td>
        <td class="email"><%= person.email %></td>
        <td class="phone"><%= person.phone_number %></td>
      </tr>
        <% end %>
    </tbody>
  </table>
  <% end %>
</div>

